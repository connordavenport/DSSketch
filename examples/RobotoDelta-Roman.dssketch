# Note: Original file uses normalized coords (-1=min, 0=default, 1=max)
#       We convert to absolute values for clarity
avar2
    # === wdth=Compressed (25) combinations ===

    [opsz=8, slnt=0, wght=Thin, wdth=Compressed, GRAD=0] > {
        VANG=$, VROT=$,
        XOPQ=50, XOFI=50, XOUC=50, XOLC=50,
        XTRA=451, XTUC=451, XTLC=500, XTFI=451, XTSP=$,
        YOPE=$, YOLB=$, YOPQ=48, YOFI=48, YOUC=48, YOLC=48,
        BDSZ=$, YTAS=$, YTDE=$, YTFI=$, YTLC=$, YTOS=$, YTUC=$,
        YTTL=$, XTTW=$, XTUR=$, WDSP=$, BARS=$, XTUD=$,
        STUI=$, STUO=$, STLI=$, STLO=$
    }

