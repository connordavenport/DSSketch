    XUCS 32:145:205
    XUCR 0:40:100
    XUCD -62:-15:57
    XLCS 14:112:182
    XLCR -13:32:98
    XLCD -68:-5:62
    # Figures
    XOFI 4:88:302
    YOFI 4:56:196
    XTFI 40:329:868
    XFIR 0:37:97
    # Other
    XDOT 23:144:274
    YTOS 0:11:30
    XTTW 0:5:30
    YTTL 0:57:104
    BARS 0:0:683

# Variables for frequently repeated values
avar2 vars
    $YTUC = 750
    $YTDE = -240
    $YHAU = 18
    $YHAL = 18
    $YHAF = 18
    $YTAS_display = 756
    $YTFI_display = 773

